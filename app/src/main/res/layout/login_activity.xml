<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/img5" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/app_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Selamat datang di\nPILIHAN DANA"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_margin="20dp"
        android:background="@drawable/btn_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_back"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:gravity="center"
                android:text="+62 >"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:textColor="@color/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/phone"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="@color/back"
                android:textColorHint="@color/gray"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_back"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/code"
                android:textStyle="bold"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="1"
                android:textColor="@color/back"
                android:textColorHint="#95A1AA"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/btn_code"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/pilihanDana"
                android:text="Kirim ulang code"
                android:layout_width="140dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn01"
            android:gravity="center"
            android:text="Klik Disini"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

<LinearLayout
    android:paddingBottom="20dp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray"
        android:text="Dengan login Berarti auda setuju dengan semua "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tv"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:text="Kebijakan priuasi TANGAN TERBUKA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
</RelativeLayout>
